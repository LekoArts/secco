{
  "name": "secco",
  "type": "module",
  "version": "2.3.6",
  "packageManager": "pnpm@10.11.0",
  "description": "Local package testing made easy. secco is a command-line tool for local development. It uses Verdaccio and direct file copying to apply your latest changes to other projects.",
  "author": "LekoArts",
  "license": "MIT",
  "homepage": "https://github.com/LekoArts/secco",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LekoArts/secco"
  },
  "bugs": {
    "url": "https://github.com/LekoArts/secco/issues"
  },
  "keywords": [
    "secco",
    "verdaccio",
    "local",
    "cli",
    "dev-cli",
    "developer-tools"
  ],
  "bin": {
    "secco": "dist/cli.mjs"
  },
  "files": [
    "dist/"
  ],
  "engines": {
    "node": "^18.19.0 || >=20.5.0",
    "pnpm": ">=8.8.0"
  },
  "scripts": {
    "build": "tsdown",
    "watch": "tsdown --watch",
    "prepublishOnly": "pnpm run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test:unit": "vitest run",
    "test:unit:w": "vitest watch",
    "test:integration": "vitest run --config integration/vitest.config.ts",
    "test:integration:w": "vitest watch --config integration/vitest.config.ts",
    "typecheck": "tsc --noEmit",
    "changeset": "changeset",
    "version": "changeset version",
    "version:ci": "changeset version && pnpm install --lockfile-only",
    "release": "pnpm build && changeset publish"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "consola": "^3.4.2",
    "del": "^8.0.0",
    "destr": "^2.0.5",
    "enquirer": "^2.4.1",
    "execa": "^9.6.0",
    "find-workspaces": "^0.3.1",
    "fs-extra": "^11.3.0",
    "js-yaml": "^4.1.0",
    "lodash-es": "^4.17.21",
    "nanoid": "^5.1.5",
    "node-fetch": "^3.3.2",
    "nypm": "^0.6.0",
    "pathe": "^2.0.3",
    "rc9": "^2.1.2",
    "signal-exit": "^4.1.0",
    "strip-bom": "^5.0.0",
    "valibot": "^1.1.0",
    "verdaccio": "^6.1.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.2",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.4",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.15.29",
    "@types/yargs": "^17.0.33",
    "@verdaccio/types": "^10.8.0",
    "@vitest/coverage-v8": "^3.1.4",
    "eslint": "^9.28.0",
    "get-port": "^7.1.0",
    "lint-staged": "^16.1.0",
    "simple-git-hooks": "^2.13.0",
    "strip-ansi": "^7.1.0",
    "tsdown": "^0.12.5",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
