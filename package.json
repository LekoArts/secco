{
  "name": "secco",
  "type": "module",
  "version": "3.1.2",
  "packageManager": "pnpm@10.27.0",
  "description": "Local package testing made easy. secco is a command-line tool for local development. It uses Verdaccio and direct file copying to apply your latest changes to other projects.",
  "author": "LekoArts",
  "license": "MIT",
  "homepage": "https://github.com/LekoArts/secco",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LekoArts/secco.git"
  },
  "bugs": {
    "url": "https://github.com/LekoArts/secco/issues"
  },
  "keywords": [
    "secco",
    "verdaccio",
    "local",
    "cli",
    "dev-cli",
    "developer-tools"
  ],
  "bin": {
    "secco": "dist/cli.mjs"
  },
  "files": [
    "dist/"
  ],
  "engines": {
    "node": "^20.19.0 || ^22.12.0 || >=23"
  },
  "scripts": {
    "build": "tsdown",
    "watch": "tsdown --watch",
    "prepublishOnly": "pnpm run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test:unit": "vitest run",
    "test:unit:w": "vitest watch",
    "test:integration": "vitest run --config integration/vitest.config.ts",
    "test:integration:w": "vitest watch --config integration/vitest.config.ts",
    "typecheck": "tsc --noEmit",
    "changeset": "changeset",
    "version": "changeset version",
    "version:ci": "changeset version && pnpm install --lockfile-only",
    "release": "pnpm build && changeset publish",
    "check": "publint"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "consola": "^3.4.2",
    "del": "^8.0.1",
    "destr": "^2.0.5",
    "enquirer": "^2.4.1",
    "execa": "^9.6.1",
    "find-workspaces": "^0.3.1",
    "fs-extra": "^11.3.3",
    "nanoid": "^5.1.6",
    "node-fetch": "^3.3.2",
    "nypm": "^0.6.2",
    "pathe": "^2.0.3",
    "rc9": "^2.1.2",
    "signal-exit": "^4.1.0",
    "valibot": "^1.2.0",
    "verdaccio": "^6.2.4",
    "yaml": "^2.8.2",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.3",
    "@changesets/cli": "^2.29.8",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.9.2",
    "@types/yargs": "^17.0.34",
    "@verdaccio/types": "^10.8.0",
    "@vitest/coverage-v8": "^4.0.16",
    "changesets-changelog-github-local": "^1.0.1",
    "eslint": "^9.39.2",
    "eslint-plugin-depend": "^1.4.0",
    "get-port": "^7.1.0",
    "lint-staged": "^16.2.7",
    "publint": "^0.3.16",
    "simple-git-hooks": "^2.13.1",
    "strip-ansi": "^7.1.2",
    "tsdown": "^0.18.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
